<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lEpisodios"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivEpisodios"
            android:layout_margin="8dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ldetalleEpisodios"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvEpisodiosNombre"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="19sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvEpisodioduracion"
            android:layout_marginTop="3dp"
            android:textColor="#818181"
            android:text=""
            android:textSize="19sp"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivDescargarEpi"
                android:layout_margin="5dp"
                android:src="@drawable/desepi"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvEpisodiodes"
        android:layout_marginTop="3dp"
        android:textColor="#717070"
        android:text=""
        android:textSize="19sp"
        app:layout_constraintTop_toBottomOf="@+id/lEpisodios"/>

</androidx.constraintlayout.widget.ConstraintLayout>