<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Encabezado con logo y botón de editar -->
    <LinearLayout
        android:id="@+id/llEncabezado"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#000000"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivnetflixlogo"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginEnd="45dp"
            android:layout_marginStart="140dp"
            android:src="@drawable/netflixlog" />

        <ImageView
            android:id="@+id/iviconedit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="60dp"
            android:src="@drawable/iconedit" />
    </LinearLayout>

    <!-- Texto central -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#000000"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="80dp"
        android:layout_marginHorizontal="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:text="¿Quién está viendo ahora?" />
    </LinearLayout>

    <!-- RecyclerView para los perfiles -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPerfiles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false"/>
</LinearLayout>
